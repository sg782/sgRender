            // if currently blocked
            if(depth_buffer.data[int_i * int(push.screen_width) + int_j] > avg_depth){
                continue;
            }else{
                depth_buffer.data[int_i * int(push.screen_width) + int_j] = avg_depth;
            }



            // if currently blocked
            // if(depth_buffer.data[int_i * int(push.screen_width) + int_j] > avg_depth){
            //     continue;
