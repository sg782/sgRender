                mod(c/(256*256),256),
                0);
            vec4 to_write = color / 255;



            ivec2 coord = ivec2(int(j+0.5),int(i+0.5));
            imageStore(img, coord, to_write);     

        }

        cur_x_1 -= inv_slope_1;
        cur_x_2 -= inv_slope_2;
    }


}

